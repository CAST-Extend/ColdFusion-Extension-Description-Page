<METRIC Name="Raw SQL Complexity" TYPE="2">	
		<LANGUAGE NAME="ColdFusion-LANGUAGE">		
			<ACTIVE>yes</ACTIVE>
			<INIT>0</INIT>
			<SEARCH_IN_CODE>Yes</SEARCH_IN_CODE>
			<SEARCH_IN_COMMENT>No</SEARCH_IN_COMMENT>
			<SEARCH_IN_STRING>No</SEARCH_IN_STRING>
			<SEARCH_IN_EMBEDDEDSQL>No</SEARCH_IN_EMBEDDEDSQL>
			<SEARCH_CASE_SENSITIVE>No</SEARCH_CASE_SENSITIVE>
			<EMBEDDED> 
        				<ADD>1</ADD> 
        				<BEGIN> 
                		<REGEXP>FROM</REGEXP>
        				</BEGIN> 
        				<VALUE> 
                		<REGEXP>,</REGEXP> 
								<REGEXP>JOIN</REGEXP> 
       					</VALUE> 
        				<END> 
                		<REGEXP><![CDATA[\.|WHERE|GROUP|HAVING|ORDER|OPEN|UNION|INSERT|\)|SELECT]]></REGEXP>  
        				</END> 
 				</EMBEDDED> 									
		</LANGUAGE>		
</METRIC>
	
