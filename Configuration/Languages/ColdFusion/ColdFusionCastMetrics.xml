	<METRIC NAME="Joins on more than 4 Tables" TYPE="9">
		<LANGUAGE NAME="ColdFusion-LANGUAGE">		
			<ACTIVE>yes</ACTIVE>
			<INIT>0</INIT>
			<SEARCH_IN_CODE>Yes</SEARCH_IN_CODE>
			<SEARCH_IN_COMMENT>No</SEARCH_IN_COMMENT>
			<SEARCH_IN_STRING>No</SEARCH_IN_STRING>
			<SEARCH_IN_EMBEDDEDSQL>Yes</SEARCH_IN_EMBEDDEDSQL>
			<SEARCH_CASE_SENSITIVE>NO</SEARCH_CASE_SENSITIVE>
			<EMBEDDED> 
        			<ADD>0</ADD> 
        			<THRESHOLD>3</THRESHOLD> 
        			<BEGIN> 
                			<REGEXP>FROM</REGEXP>
        			</BEGIN> 
        			<VALUE> 
                			<REGEXP>,</REGEXP> 
					<REGEXP>JOIN</REGEXP> 
       				</VALUE> 
        			<END> 
                        	<REGEXP>WHERE|;|OPEN|SELECT|INTO</REGEXP>  
        			</END> 
 			</EMBEDDED> 		
		</LANGUAGE>
	</METRIC>
	
